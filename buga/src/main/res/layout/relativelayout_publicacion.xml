<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="fill_parent"
               android:layout_height="150px"
               android:orientation="horizontal"
               android:background="@color/ui_list_actualidad_background"
               android:textColor="@color/ui_list_actualidad_textColor"
               android:padding="1px">

    <ImageView
        android:id="@+id/iv_Imagen"
        android:layout_width="145px"
        android:layout_height="145px"
        android:padding="5px"
        android:layout_margin="5px"
        android:background="#cccccc"
        android:src="@drawable/ic_drawer"
        android:layout_gravity="center"
        android:layout_alignParentRight="true" />


    <LinearLayout android:id="@+id/columna_datos"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="5dip"
        >
        <!-- FILA1-->
        <LinearLayout android:id="@+id/cfila1"
                      android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:paddingLeft="0sp">
            <TextView
                android:id="@+id/tv_Publicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Codigo"
                android:textStyle="bold"
                android:textSize="@dimen/ui_list_actualidad_resumen_textSize"
                android:textColor="@color/ui_list_actualidad_textColor"
                android:shadowColor="@color/ui_list_actualidad_shadowColor"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/tv_Titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/titulo"
                android:textStyle="bold"
                android:textSize="@dimen/ui_list_actualidad_resumen_textSize"
                android:textColor="@color/ui_list_actualidad_textColor"
                android:shadowColor="@color/ui_list_actualidad_shadowColor"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>
        <!-- Fila 2: DirecciÃ³n-->
        <LinearLayout android:id="@+id/cfila2"
                      android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:paddingLeft="0sp">
            <TextView
                android:id="@+id/tv_Resumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:text="@string/resumen"
                android:textStyle="bold"
                android:textSize="@dimen/ui_list_actualidad_resumen_textSize"
                android:textColor="@color/ui_list_actualidad_textColor"
                android:shadowColor="@color/ui_list_actualidad_shadowColor"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>




    </LinearLayout>
</LinearLayout >
